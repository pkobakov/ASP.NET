@using MyRecipes.Web.ViewModels.Recipes
@model RecipesListViewModel
@{      
    this.ViewData["Title"] = "All recipes";
 }

<h1 class="display-4 text-white text-center">@ViewData["Title"]</h1>
<div class="row">
    @foreach (var recipe in this.Model.Recipes)
    {
        <div class="media col-md-3">
            <img src="@recipe.ImageUrl" width="100" class="mr-3 img-responsive" alt="...">
            <div class="media-body">
                <h5 class="mt-0"><a asp-action="ById" asp-route-id ="@recipe.Id">@recipe.Name</a></h5>
                @recipe.CategoryName
            </div>
        </div>
    }
</div>
<hr/>
<partial name="_PagingPartial" model="@Model" />