@using MyFirstWeb.Models.Enums.Products
@using MyFirstWeb.Models.Products
@model AddProductModel

<div class="text-center">
    <h1 class="display-4 text-white">Add product</h1>
</div>

<form method="post" class="col-md-6" enctype="multipart/form-data">
    <div asp-validation-summary=All class="text-warning"></div>
        <div class="form-group">
           <label asp-for="ProductName" class= "text-white"></label>
           <input asp-for="ProductName" class="form-control"/>
           <span asp-validation-for=ProductName class= "text-warning"></span>
        </div>

        <div class="form-group">
           <label asp-for="Description" class= "text-white"></label>
           <textarea rows="5" asp-for="Description" class="form-control"></textarea>
           <span asp-validation-for=Description class= "text-warning"></span>
        </div>

        
        <div class"form-group">
            <label asp-for="Category" class="text-white"></label>
            <select asp-for="Category" class="form-control" asp-items= "@Html.GetEnumSelectList<Category>()" ></select>
            <span asp-validation-for="Category" class="text-warning"></span>


        </div>
        
        <div class="form-group">
            <label asp-for="Price" class= "text-white"></label>
            <input asp-for= "Price" class="form-control"/>
            <span asp-validation-for=Price class="text-warning"></span>
        </div>

        <div class="form-group col-md-6">
            <label asp-for=" Image" class="text-white"></label>
            <input asp-for="Image" class="form-control"/>
            <span asp-validation-for="Image" class="text-warning"></span>
        
        </div>
     
        
    <input type="submit" class="btn btn-secondary"/>
    </form>
    @section Scripts{
        <partial name="_ValidationScriptsPartial" />
    }

